<!-- Sistema de Anúncios Google AdSense -->
<% if (process.env.GOOGLE_ADSENSE_CLIENT) { %>

<!-- Anúncio Banner Superior -->
<div class="ad-banner-top mb-4">
  <ins class="adsbygoogle"
       style="display:block"
       data-ad-client="<%= process.env.GOOGLE_ADSENSE_CLIENT %>"
       data-ad-slot="1234567890"
       data-ad-format="auto"
       data-full-width-responsive="true"></ins>
  <script>
       (adsbygoogle = window.adsbygoogle || []).push({});
  </script>
</div>

<% } %>

<!-- Anúncio Lateral (para desktop) -->
<% if (process.env.GOOGLE_ADSENSE_CLIENT) { %>
<div class="ad-sidebar d-none d-lg-block">
  <ins class="adsbygoogle"
       style="display:block"
       data-ad-client="<%= process.env.GOOGLE_ADSENSE_CLIENT %>"
       data-ad-slot="0987654321"
       data-ad-format="auto"
       data-full-width-responsive="true"></ins>
  <script>
       (adsbygoogle = window.adsbygoogle || []).push({});
  </script>
</div>
<% } %>