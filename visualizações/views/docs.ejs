                    <a href="/docs" class="active">Docs</a>
                    <a href="/dashboard">Dashboard</a>
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container">
        <div class="docs-layout">
            <!-- Sidebar -->
            <aside class="sidebar">
                <h3>Navegação</h3>
                <ul>
                    <li><a href="#introducao" class="active">Introdução</a></li>
                    <li><a href="#comandos">Comandos</a></li>
